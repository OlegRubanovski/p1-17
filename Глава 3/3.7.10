struct String {

	String(const char *str = "");

	String(size_t n, char c);

	~String();





    /* Реализуйте конструктор копирования */

      String(const String &other)

{

    if (size != other.size)

    {

        size = other.size;

        str = new char[size + 1];

    }

    strcpy(str, other.str);

          str[size + 1]='\0';

}

        





	void append(const String &other);



	size_t size;

	char *str;

};
