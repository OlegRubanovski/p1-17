#include <cstddef> // size_t

#include <cstring> // strlen, strcpy



struct String {



    /* Реализуйте этот конструктор */

	String(size_t n, char c){

        this->size=n;

        this->str = new char[n+1];

        for(int i=0; i<n; i++)

            this->str[i]=c;

        this->str[n]='\0';    

    }



    /* и деструктор */

	~String(){
        delete [] this->str;
    }

	size_t size;

	char *str;

};
